---
layout: layout
---

{% if title %}
<h2 class="content-title">{{ title }}</h2>
<p class="content-description">{{ description }}</p>
{% endif %}

<div role="list" class="content-grid">

  {%- for item in items -%}
    <div role="listitem">
      <a href="{{ item.url }}" class="tool-wrap" target="_blank">
        <img class="thumbnail" src="/img/{{ item.thumbnail }}" alt="">
        <h3>{{ item.title }}</h3>
        <p class="quote">
          {{ item.quote }}
        </p>
      </a>
    </div>
  {% endfor %}

</div>
