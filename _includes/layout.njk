<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="header__inner">
          <a class="header__link" href="/">
            <img class="header__logo" src="/img/logo.png" alt="logo">
            <h1 class="header__title">{{ metadata.title }}</h1>
          </a>
          <div class="header__copy">
            Curated by <a class="header__author" href="https://twitter.com/serhiikulykov" target="_blank">@serhiikulykov</a>
          </div>
        </div>
      </div>
    </header>

    <div class="content">
      <div class="container">
        <div class="content__wrapper">
          <aside class="sidebar">
            <div class="sidebar__wrapper">
              <h3 class="sidebar__title">Categories</h3>
              {%- set navPages = collections.all | eleventyNavigation %}
              <ul class="nav">
              {%- for entry in navPages %}
                <li class="nav__item">
                  <a class="nav__link{% if entry.url == page.url %} nav__link--active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
                </li>
              {%- endfor %}
              </ul>
            </div>
          </aside>
          <main class="main">
          {%- if header %}
            <h2 class="main__title">{{ header }}</h2>
            <p class="main__description">{{ description }}</p>
          {%- endif %}
            <div class="main__grid">
            {%- for item in items %}
              <a href="{{ item.url }}" class="item" target="_blank">
                <img class="item__thumbnail" src="/img/{{ item.thumbnail }}" alt="">
                <h3 class="item__title">{{ item.title }}</h3>
                <p class="item__quote">
                  {{ item.quote }}
                </p>
              </a>
            {% endfor -%}
            </div>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
